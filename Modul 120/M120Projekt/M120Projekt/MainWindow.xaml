<Window xmlns:UserControls="clr-namespace:M120Projekt.UserControls"  x:Class="M120Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M120Projekt"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="544" Height="544" MinWidth="800" Width="800">
    <StackPanel VerticalAlignment="Stretch">
        <Grid Background="#FF049395" Height="64">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="64" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="64" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Menu" />
            <Label Grid.Column="1" Content="Artikel bearbeiten" FontSize="20" VerticalAlignment="Center" Padding="16" Foreground="White" />
            <Button Grid.Column="2" Content="Zurück" />
        </Grid>
        <UserControls:EditArticle />
    </StackPanel>
</Window>
